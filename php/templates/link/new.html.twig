{% extends 'base.html.twig' %}

{% block title %}New Link{% endblock %}

{% block body %}
    <h1>Create a New Link</h1>
    <div class="row">
        <div class="col-sm-8">
            {{ include('link/_form.html.twig') }}
        </div><!-- /.col -->
        <div class="col-sm-4">
            <h3>Redirects performed: {{ totalRedirects|default(0) }}</h3>
            {% if links %}
                <ul>
                {% for link in links %}
                    <li><a href="{{path('link_show', {'identifier':link.identifier})}}">{{ link.identifier }}</a></li>
                {% endfor %}
                </ul>
            {% else %}
                <p>No links yet!</p>
            {% endif %}
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock %}
