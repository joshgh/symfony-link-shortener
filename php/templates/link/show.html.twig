{% extends 'base.html.twig' %}

{% block title %}Link Info{% endblock %}

{% block body %}
    <h1>Link Info</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Url</th>
                <td>{{ link.url }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ link.identifier }}</td>
            </tr>
            <tr>
                <th>Shortlink</th>
                {% set shortlink = url('link_follow', {'identifier':link.identifier}) %}
                <td><a href="{{ shortlink }}">{{shortlink}}</a></td>
            </tr>
            <tr>
                <th>Redirect Count</th>
                <td>{{ link.redirectCount|default(0) }}</td>
            </tr>
        </tbody>
    </table>
    <div class="my-2">
        <a class="btn btn-secondary" href="{{ path('link_edit', {'id': link.id}) }}">Edit</a>
    </div>

    {{ include('link/_delete_form.html.twig') }}
{% endblock %}
